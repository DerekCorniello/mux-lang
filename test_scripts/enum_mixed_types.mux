// Comprehensive test for enum variants with mixed types
// Tests that enum field extraction handles different types correctly

println("=== Testing Basic Mixed Primitives ===")

// Test 1: Enum with different primitive types per variant
enum Status { Active(string), Inactive(int), Pending(bool), Code(char) }

auto status1 = Status.Active("running")
match status1 {
    Active(msg) { println("✓ Status.Active(string): " + msg) }
    Inactive(code) { println("✗ Unexpected Inactive") }
    Pending(flag) { println("✗ Unexpected Pending") }
    Code(c) { println("✗ Unexpected Code") }
}

auto status2 = Status.Inactive(42)
match status2 {
    Active(msg) { println("✗ Unexpected Active") }
    Inactive(code) { println("✓ Status.Inactive(int): " + code.to_string()) }
    Pending(flag) { println("✗ Unexpected Pending") }
    Code(c) { println("✗ Unexpected Code") }
}

auto status3 = Status.Pending(true)
match status3 {
    Active(msg) { println("✗ Unexpected Active") }
    Inactive(code) { println("✗ Unexpected Inactive") }
    Pending(flag) { println("✓ Status.Pending(bool): " + flag.to_string()) }
    Code(c) { println("✗ Unexpected Code") }
}

auto status4 = Status.Code('X')
match status4 {
    Active(msg) { println("✗ Unexpected Active") }
    Inactive(code) { println("✗ Unexpected Inactive") }
    Pending(flag) { println("✗ Unexpected Pending") }
    Code(c) { println("✓ Status.Code(char): extracted char value") }
}

