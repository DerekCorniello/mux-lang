import std.assert

print("=== Assert Module Tests ===")

print("")
print("Testing assert_true and assert_false...")
assert.assert_true(true)
assert.assert_false(false)
print("  PASS: assert_true(true) and assert_false(false)")

print("")
print("Testing assert_eq and assert_ne...")
assert.assert_eq(5, 5)
assert.assert_ne(3, 4)
assert.assert_eq("hello", "hello")
print("  PASS: assert_eq and assert_ne for int and string")

print("")
print("Testing assert with custom message...")
assert.assert(true, "this should not fail")
print("  PASS: assert(true, message)")

print("")
print("Testing assert_some and assert_none...")
auto opt_some = Some(42)
assert.assert_some(opt_some)
auto opt_none = None
assert.assert_none(opt_none)
print("  PASS: assert_some and assert_none")

print("")
print("Testing assert_ok and assert_err...")
auto ok_val = Ok(42)
assert.assert_ok(ok_val)
auto err_val = Err("test error")
assert.assert_err(err_val)
print("  PASS: assert_ok and assert_err")

print("")
print("=== All Assert Tests Passed ===")
