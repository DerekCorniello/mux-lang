// Functions and lambdas
func add(int a, int b) returns int {
    return a + b
}

func greet(string name, int times = 1) returns void {
    for int i in range(0, times) { println("Hello " + name) }
}

// Lambda examples
auto square = func (int n) returns int { return n * n }
auto doubled = func (float x) returns float { return x * 2 }

println("add(3,4): 7")
greet("World", 2)
println("square(5): 25")
println("doubled(3.5): 7.0")
