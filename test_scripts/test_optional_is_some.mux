// Test optional is_some() and is_none() methods

print("=== Testing optional is_some() and is_none() ===")

// Test 1: is_some() with some value
optional<int> opt1 = some(42)
print("opt1 = some(42)")
print("opt1.is_some() = " + opt1.is_some().to_string())
print("opt1.is_none() = " + opt1.is_none().to_string())

// Test 2: is_some() with none
optional<int> opt2 = none
print("")
print("opt2 = none")
print("opt2.is_some() = " + opt2.is_some().to_string())
print("opt2.is_none() = " + opt2.is_none().to_string())

// Test 3: Using in conditional
print("")
print("=== Testing in conditionals ===")

if opt1.is_some() {
    print("✓ opt1.is_some() returned true")
}

if opt2.is_none() {
    print("✓ opt2.is_none() returned true")
}

// Test 4: optional<string>
optional<string> opt3 = some("hello")
print("")
print("opt3 = some(\"hello\")")
print("opt3.is_some() = " + opt3.is_some().to_string())
print("opt3.is_none() = " + opt3.is_none().to_string())

