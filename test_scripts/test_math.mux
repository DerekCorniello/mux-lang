// Math module test

import std.math

// Constants (note: no parentheses!)
print("--- Constants ---")
print("pi: " + math.pi.to_string())
print("e: " + math.e.to_string())

// Trig functions
print("--- Trig ---")
print("sin(0.0): " + math.sin(0.0).to_string())
print("cos(0.0): " + math.cos(0.0).to_string())
print("tan(0.0): " + math.tan(0.0).to_string())

// Inverse trig
print("--- Inverse Trig ---")
print("asin(1.0): " + math.asin(1.0).to_string())
print("acos(1.0): " + math.acos(1.0).to_string())
print("atan(1.0): " + math.atan(1.0).to_string())
print("atan2(1.0, 1.0): " + math.atan2(1.0, 1.0).to_string())

// Power and root
print("--- Power/Root ---")
print("pow(2.0, 10.0): " + math.pow(2.0, 10.0).to_string())
print("sqrt(144.0): " + math.sqrt(144.0).to_string())

// Logarithms
print("--- Logarithms ---")
print("ln(1.0): " + math.ln(1.0).to_string())
print("log(100.0, 10.0): " + math.log(100.0, 10.0).to_string())
print("log2(8.0): " + math.log2(8.0).to_string())
print("log10(1000.0): " + math.log10(1000.0).to_string())

// Exponential
print("--- Exponential ---")
print("exp(0.0): " + math.exp(0.0).to_string())
print("exp(1.0): " + math.exp(1.0).to_string())

// Absolute value
print("--- Abs ---")
print("abs(-5.5): " + math.abs(-5.5).to_string())
print("abs(3.0): " + math.abs(3.0).to_string())

// Rounding
print("--- Rounding ---")
print("floor(3.7): " + math.floor(3.7).to_string())
print("ceil(3.2): " + math.ceil(3.2).to_string())
print("round(3.5): " + math.round(3.5).to_string())
print("round(3.4): " + math.round(3.4).to_string())

// Min/Max
print("--- Min/Max ---")
print("min(2.0, 5.0): " + math.min(2.0, 5.0).to_string())
print("max(2.0, 5.0): " + math.max(2.0, 5.0).to_string())

// Hypot
print("--- Hypot ---")
print("hypot(3.0, 4.0): " + math.hypot(3.0, 4.0).to_string())
