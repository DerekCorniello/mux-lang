print("=== Testing Mixed Operators and Precedence ===")

// NOT has higher precedence than AND
bool a = true
bool b = false
bool c = true

// !b && c should be (!b) && c = true && true = true
if !b && c {
    print("✓ !false && true = true (precedence: NOT before AND)")
} else {
    print("✗ FAIL: !false && true should be true")
}

// AND has higher precedence than OR
// false || true && true should be false || (true && true) = false || true = true
if false || true && true {
    print("✓ false || true && true = true (precedence: AND before OR)")
} else {
    print("✗ FAIL: false || true && true should be true")
}

// Complex expression: !(a && b) || c
// !(true && false) || true = !false || true = true || true = true
if !(a && b) || c {
    print("✓ !(true && false) || true = true")
} else {
    print("✗ FAIL: !(true && false) || true should be true")
}

// De Morgan's law: !(a && b) should equal (!a || !b)
bool demorgan1 = !(a && b)
bool demorgan2 = !a || !b
if demorgan1 == demorgan2 {
    print("✓ De Morgan's law: !(a && b) == (!a || !b)")
} else {
    print("✗ FAIL: De Morgan's law failed")
}

// De Morgan's law: !(a || b) should equal (!a && !b)
bool demorgan3 = !(a || b)
bool demorgan4 = !a && !b
if demorgan3 == demorgan4 {
    print("✓ De Morgan's law: !(a || b) == (!a && !b)")
} else {
    print("✗ FAIL: De Morgan's law failed")
}

// Complex nested expression
bool complex = (a && !b) || (!a && b)
if complex {
    print("✓ (true && !false) || (!true && false) = true")
} else {
    print("✗ FAIL: (true && !false) || (!true && false) should be true")
}

