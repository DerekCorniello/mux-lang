print("=== Testing Logical Operators in Control Flow ===")

// In if conditions
int result = 0
if x < 10 && y > 5 {
    result = 1
}
if result == 1 {
    print("✓ Logical AND in if condition works")
} else {
    print("✗ FAIL: Logical AND in if condition failed")
}

// In while loops
int counter = 0
bool flag = true
while counter < 3 && flag {
    counter = counter + 1
}
if counter == 3 {
    print("✓ Logical AND in while condition works")
} else {
    print("✗ FAIL: Logical AND in while condition failed")
}

