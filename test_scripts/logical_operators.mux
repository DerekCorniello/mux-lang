// Comprehensive test for logical operators: !, &&, ||
// Tests basic operations, precedence, short-circuit evaluation, and edge cases

print("=== Testing NOT Operator (!) ===")

// Basic NOT
bool t = true
bool f = false

bool not_true = !t
bool not_false = !f

if not_true {
    print("✗ FAIL: !true should be false")
} else {
    print("✓ !true = false")
}

if not_false {
    print("✓ !false = true")
} else {
    print("✗ FAIL: !false should be true")
}

// Double negation
bool double_neg_true = !!t
bool double_neg_false = !!f

if double_neg_true {
    print("✓ !!true = true")
} else {
    print("✗ FAIL: !!true should be true")
}

if double_neg_false {
    print("✗ FAIL: !!false should be false")
} else {
    print("✓ !!false = false")
}

// NOT with literals
if !true {
    print("✗ FAIL: !true should be false")
} else {
    print("✓ !true (literal) = false")
}

if !false {
    print("✓ !false (literal) = true")
} else {
    print("✗ FAIL: !false should be true")
}

// NOT with comparisons
int x = 5
int y = 10

if !(x > y) {
    print("✓ !(5 > 10) = true")
} else {
    print("✗ FAIL: !(5 > 10) should be true")
}

if !(x < y) {
    print("✗ FAIL: !(5 < 10) should be false")
} else {
    print("✓ !(5 < 10) = false")
}

print("")
print("=== Testing AND Operator (&&) ===")

// Truth table for AND
bool tt = true && true
bool tf = true && false
bool ft = false && true
bool ff = false && false

if tt {
    print("✓ true && true = true")
} else {
    print("✗ FAIL: true && true should be true")
}

if tf {
    print("✗ FAIL: true && false should be false")
} else {
    print("✓ true && false = false")
}

if ft {
    print("✗ FAIL: false && true should be false")
} else {
    print("✓ false && true = false")
}

if ff {
    print("✗ FAIL: false && false should be false")
} else {
    print("✓ false && false = false")
}

// AND with comparisons
if (x < y) && (y > 0) {
    print("✓ (5 < 10) && (10 > 0) = true")
} else {
    print("✗ FAIL: (5 < 10) && (10 > 0) should be true")
}

if (x > y) && (y > 0) {
    print("✗ FAIL: (5 > 10) && (10 > 0) should be false")
} else {
    print("✓ (5 > 10) && (10 > 0) = false")
}

// Chained AND
if true && true && true {
    print("✓ true && true && true = true")
} else {
    print("✗ FAIL: true && true && true should be true")
}

if true && true && false {
    print("✗ FAIL: true && true && false should be false")
} else {
    print("✓ true && true && false = false")
}

print("")
print("=== Testing OR Operator (||) ===")

// Truth table for OR
bool or_tt = true || true
bool or_tf = true || false
bool or_ft = false || true
bool or_ff = false || false

if or_tt {
    print("✓ true || true = true")
} else {
    print("✗ FAIL: true || true should be true")
}

if or_tf {
    print("✓ true || false = true")
} else {
    print("✗ FAIL: true || false should be true")
}

if or_ft {
    print("✓ false || true = true")
} else {
    print("✗ FAIL: false || true should be true")
}

if or_ff {
    print("✗ FAIL: false || false should be false")
} else {
    print("✓ false || false = false")
}

// OR with comparisons
if (x > y) || (y > 0) {
    print("✓ (5 > 10) || (10 > 0) = true")
} else {
    print("✗ FAIL: (5 > 10) || (10 > 0) should be true")
}

if (x > y) || (y < 0) {
    print("✗ FAIL: (5 > 10) || (10 < 0) should be false")
} else {
    print("✓ (5 > 10) || (10 < 0) = false")
}

// Chained OR
if false || false || true {
    print("✓ false || false || true = true")
} else {
    print("✗ FAIL: false || false || true should be true")
}

if false || false || false {
    print("✗ FAIL: false || false || false should be false")
} else {
    print("✓ false || false || false = false")
}

