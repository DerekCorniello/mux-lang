print("=== Testing Short-Circuit Evaluation ===")

// Helper functions to test side effects
func should_not_run_and() returns bool {
    print("✗ ERROR: should_not_run_and() was called (short-circuit failed)")
    return true
}

func should_run_and() returns bool {
    print("  should_run_and() called (expected)")
    return true
}

func should_not_run_or() returns bool {
    print("✗ ERROR: should_not_run_or() was called (short-circuit failed)")
    return false
}

func should_run_or() returns bool {
    print("  should_run_or() called (expected)")
    return false
}

// Test AND short-circuit: false && func() should NOT call func()
print("Testing: false && should_not_run_and()")
bool and_sc1 = false && should_not_run_and()
print("✓ Short-circuit AND: right side not evaluated when left is false")

// Test AND non-short-circuit: true && func() SHOULD call func()
print("Testing: true && should_run_and()")
bool and_sc2 = true && should_run_and()
print("✓ AND evaluates right side when left is true")

// Test OR short-circuit: true || func() should NOT call func()
print("Testing: true || should_not_run_or()")
bool or_sc1 = true || should_not_run_or()
print("✓ Short-circuit OR: right side not evaluated when left is true")

// Test OR non-short-circuit: false || func() SHOULD call func()
print("Testing: false || should_run_or()")
bool or_sc2 = false || should_run_or()
print("✓ OR evaluates right side when left is false")

