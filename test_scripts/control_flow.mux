// Control flow
auto x = 5
if x > 0 { println("Positive") } else { println("Non-positive") }

match Some(15) {
    Some(v) if v > 10 { println("Large: " + v.to_string()) }
    Some(v) { println("Small: " + v.to_string()) }
    None { println("None") }
}

for int i in range(0, 3) { println(i.to_string()) }

for int j in range(0, 10) {
    if j % 2 == 0 {
        println("even")
    } else {
        println("odd")
    }
}

while x > 0 { x -= 1 }

if x < 0 {
    println("Negative")
}

if x == 0 {
    println("Zero")
} else {
    println("Non-zero")
}

if x > 10 {
    println("gt10")
} else if x > 5 {
    println("gt5")
} else {
    println("other")
}

for int j in range(0, 3) {
    if j == 1 {
        println("one")
    } else if j == 0 {
        println("zero")
    }
}

while x < 3 {
    x = x + 1
}

if x > 1
{
    println("nl brace then")
}
else
{
    println("nl brace else")
}

println("Final x: " + x.to_string())
